<On_game>:

#on_game.py attributes 
    #Winner toggle button
    winner_one: winner_one
    winner_two: winner_two
    winner_three: winner_three
    winner_four: winner_four

    #Loser toggle button
    loser_one: loser_one
    loser_two: loser_two
    loser_three: loser_three
    loser_four: loser_four
    self_touch: self_touch

    #Dealer
    dealer_one: dealer_one
    dealer_two: dealer_two
    dealer_three: dealer_three
    dealer_four: dealer_four

    #Player money
    player_one_money: player_one_money
    player_two_money: player_two_money
    player_three_money: player_three_money
    player_four_money: player_four_money

    #Amount of money (text input)
    amount_of_tai: amount_of_tai
    
    #Player background
    player_one_background: player_one_background
    player_two_background: player_two_background
    player_three_background: player_three_background
    player_four_background: player_four_background

    #ROUND
    round_E: round_E
    round_S: round_S
    round_W: round_W
    round_N: round_N

    
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size: (self.size)
            RelativeLayout:
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                
                BoxLayout:
                    orientation: "vertical"
                    size: self.parent.size
                    padding: dp(20)
                    spacing: dp(10)
                    RelativeLayout:
                        id: round
                        size_hint: 1,.7
                        BoxLayout:
                            orientation: "horizontal"
                            spacing: dp(20)
                            pos_hint: {"center_x":.5}
                            RelativeLayout:
                                id: round_E
                                round_color: (.2,.3,.1,.6)
                                canvas.before:
                                    Color:
                                        rgba: self.round_color
                                    Rectangle:
                                        size: self.size
                                Label:
                                    text: "E"
                                    color: 0,0,0,1
                                    font_size: self.height*.5
                                    font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                            RelativeLayout:
                                id: round_S
                                round_color: (1,1,1,1)
                                canvas.before:
                                    Color:
                                        rgba: self.round_color
                                    Rectangle:
                                        size: self.size
                                Label:
