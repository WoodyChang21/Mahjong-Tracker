                            id: amount_of_tai
                            multiline: False
                            size_hint: .3,None
                            height: amount_label.height*.55
                            font_size: self.width*.2
                            pos_hint:{'center_y':.5, 'x':0}
                            on_text_validate: root.submit_button()
                        Button:
                            id: submit_button
                            text: 'Submit'
                            size_hint: .3,None
                            height: amount_of_tai.height
                            font_size: self.height*.4
                            font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                            pos_hint:{'center_y':.5, 'x':.1}
                            on_release: root.submit_button()

