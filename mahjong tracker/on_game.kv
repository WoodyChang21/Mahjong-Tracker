                            Label:
                                id: dealer_one
                                text: "0"
                                color: .5,0,0,1
                                size_hint: .5,1
                                font_size: self.width*.2
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                                
                            Label:
                                text:root.parent.player_one_name
                                font_size: self.width*.08
                                color: 0,0,0,1
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"

