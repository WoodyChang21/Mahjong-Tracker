        RelativeLayout:
            size_hint: 1,.1
            canvas.before:
                Color:
                    rgba: .9,.9,.9,1
                Rectangle:
                    size: self.size
            BoxLayout:
                size_hint: 1,1
                orientation: "horizontal"
                spacing: dp(40)
