                                pos_hint: {"center_y":.5, "right": .5}
                                text: '0'
                                color: 0,0,0,1
                                font_size: self.width*.25
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                    RelativeLayout:
                        id: player_three_background
                        player_color:(1,1,1,1)
                        canvas.before:
                            Color:
                                rgba: self.player_color
                            Rectangle:
                                size: self.size
                        BoxLayout:
                            orientation: "horizontal"
                            color: .1,.2,.1,1
                            Label:
                                text:"W"
                                color: 0,0,0,1
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                                font_size: self.width*1.2
                                size_hint: .1,1
                            Label:
                                id: dealer_three
                                text: ""
                                color: .5,0,0,1
                                size_hint: .5,1
                                font_size: self.width*.2
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                            Label:
