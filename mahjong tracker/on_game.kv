                                    font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                            RelativeLayout:
                                id: round_N
                                round_color: (1,1,1,1)
                                canvas.before:
                                    Color:
                                        rgba: self.round_color
                                    Rectangle:
                                        size: self.size
                                Label:
                                    text: "N"
                                    color: 0,0,0,1
                                    font_size: self.height*.5
                                    font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
                    RelativeLayout:
                        id: player_one_background
                        player_color:(.2,.3,.1,.3)
                        canvas.before:
                            Color:
                                rgba: self.player_color
                            Rectangle:
                                size: self.size
                        BoxLayout:
                            orientation: "horizontal"
                            Label:
                                text:"E"
                                color: 0,0,0,1
                                font_name: "C:\\Users\\User\\Desktop\\Python Project\\font\\Sackers-Gothic-Std-Light.ttf"
